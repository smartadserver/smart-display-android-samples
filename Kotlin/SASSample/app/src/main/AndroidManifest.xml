<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.smartadserver.android.kotlinsample.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main_short">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartadserver.android.kotlinsample.BannerActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_banner" />

        <activity
            android:name="com.smartadserver.android.kotlinsample.InterstitialActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_interstitial" />

        <activity
            android:name="com.smartadserver.android.kotlinsample.InAppBiddingBannerActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_inapp_bidding_banner" />

        <activity
            android:name="com.smartadserver.android.kotlinsample.InAppBiddingInterstitialActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_inapp_bidding_interstitial" />

        <activity
            android:name="com.smartadserver.android.kotlinsample.RewardedVideoActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_rewarded_video" />

        <activity
            android:name="com.smartadserver.android.kotlinsample.RecyclerViewActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_recycler" />

        <activity
            android:name="com.smartadserver.android.kotlinsample.CoordinatorLayoutActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_coordinator_layout"
            android:theme="@style/AppThemeNoActionBar"/>

        <activity
            android:name="com.smartadserver.android.kotlinsample.NativeAdActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_native" />
    </application>

</manifest>